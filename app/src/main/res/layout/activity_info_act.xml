<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_act">

    <VideoView
        android:id="@+id/vv"
        android:layout_width="393dp"
        android:layout_height="253dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="330dp"
        android:layout_height="302dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="299dp"
                android:layout_height="226dp"
                android:gravity="fill"
                android:text="Bienvenido a Banco BPM, donde  podrás manejar tus finanzas y solicitar los préstamos de nuestro banco. Ofrecemos los mejores beneficios para nuestros clientes. No esperes más y se parte de uno de los bancos más grandes a nivel latinoamericano y comienza a ganar con nosotros y cumplir tus sueños." />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="222dp"
                android:layout_height="57dp"
                android:background="@color/cardview_light_background"
                android:onClick="maps"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/location" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>